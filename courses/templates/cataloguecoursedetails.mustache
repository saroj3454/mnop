<section id="teachers" class="my-5">
  <div class="container">
    <div class="row"> <div class="col-md-12"> <h3 class="text-center text-uppercase"> OUR TOP TRENDING TUTORS </h3> </div>  </div>
    <div class="row owl-carousel carousel-main">
    {{# teachers}}
      <div class="col-md-12 mt-3">
