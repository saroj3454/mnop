

<div class="modal fade registration-form" id="modalRegistration" tabindex="-1" role="dialog" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
    <div>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
    </div>
      <div class="text-center">
        <h4 class="w-100 font-weight-bold">New account </h4>
        <span>Have an account?</span>
        <a class="sign-in-link" href="javascript:void(0);" data-toggle="modal" data-target="#exampleModalCenter" data-dismiss="modal">Log In</a>
      </div>


      <div class="modal-body mx-3">
        <div class="user_registration_form">
          <div class="row">
            <div class="col-6 md-form mb-3">
                <label data-error="wrong" data-success="right" for="orangeForm-name">First name</label>
                <input type="text" name="fname" id="fname" class="form-control validate required" >
                <span id="fname_error" class="e_error"></span>
            </div>
            <div class="col-6 md-form mb-3">
                <label data-error="wrong" data-success="right" for="orangeForm-name">Surname</label>
                <input type="text" name="lname" id="lname" class="form-control validate required">
                <span id="lname_error" class="e_error"></span>
            </div>
            <div class="col-12">
                <div class="md-form mb-3">
                  <label data-error="wrong" data-success="right" for="orangeForm-email">Email</label>
                  <input type="email" name="email" id="remail" class="form-control validate required">
                  <span id="email_error" class="e_error"></span>
                </div>
            </div>
            <div class="col-12">
              <div class="md-form mb-3">
                <label data-error="wrong" data-success="right" for="orangeForm-email">Email Again </label>
                <input type="email" name="email_a" id="remaila" class="form-control validate required">
                <span id="email_a_error" class="e_error"></span>
              </div>
            </div>
            <div class="col-12">
              <div class="md-form mb-3">
                <label data-error="wrong" data-success="right" for="orangeForm-email">Username</label>
                <input type="text" name="username" id="username" class="form-control validate required">
                <span id="username_error" class="e_error"></span>
              </div>
            </div>
            <div class="col-12">
                <div class="md-form mb-3">
                  <label data-error="wrong" data-success="right" for="orangeForm-pass">Password</label>
                  <input type="password" name="password" id="password" class="form-control validate required">
                  <span id="password_error" class="e_error"></span>
                </div>
            </div>
          </div>
      </div>
 </div>

      <div class="modal-footer">
      <div class="row">
      <div class="col-6">
        <a href="javascript:void(0);" class="btn btn-deep-orange btn-dark  w-100" data-dismiss="modal">Cancel</a>
      </div>
      <div class="col-6">
        <a href="javascript:void(0);" class="btn btn-deep-orange btn-red w-100" id="register">Sign Up</a>
      </div>
      </div>
        <div class="custom-footer w-100">
          <div class="d-flex align-items-center justify-content-between w-100">
            <div class='border-top w-40'></div>
            <div class="w-20 mt-3">OR Sign in with</div>
            <div class="border-top w-40"></div>
          </div>
        </div>

        {{{authlogin}}}


      </div>
      <div>
      </div>
    </div>
  </div>
</div>


<!-- Modal -->
<div class="modal fade" id="register-confirm" tabindex="-1" role="dialog" aria-labelledby="register-confirmTitle" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered" role="document">
    <div class="modal-content">
      <div>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body text-center mb-5">
        <div class="mb-3 d-flex align-items-center justify-content-center">
            <div class="success-circle">
              <img src="{{{ config.wwwroot }}}/theme/elearnified/images/check-icon.png" alt="" width="50px" height="50px" />
            </div>
        </div>
        <h1>Account successfully created</h1>
        <p>You have been successfully registered using the details you have provided. Please check your inbox to verify your email address.<span><a href="javascript:void(0);">See You Email to Verfy</a></span></p>
      </div>
      <div>
        <div class="text-center">
          <a href="javascript:void(0);" class="btn btn-primary text-center text-white" data-dismiss="modal" onClick="window.location.reload();">Continue</a>
        </div>
        <!-- <div class="text-center mt-3 account-server">
          <a href="javascript:void(0);">Please create an account in the server</a>
        </div> -->
      </div>
    </div>
  </div>
</div>
