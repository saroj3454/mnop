<div manageprofileimage>
	<div id="profile-image">
		<div>
			{{#userphotos}}
			<div id="pol">
				<div class="profile-img-bg">
					<div class="profile-img-wrap">
						<img src="{{photo}}" class="card-img-top" id="profile_image">
					</div>
					<div class="profile-descriptions">
						<label for="actual-btn" profile_photo class="border btn">
							 <div class="txt">Change Photo</div>
							 <div class="icon">
								<img src="{{{ config.wwwroot }}}/theme/elearnified/img/icons/camara.png" alt="" width="100%" height="100%" />
							 </div>
							
						</label>
						<input type="file" id="actual-btn" hidden accept="image/apng, image/avif, image/gif, image/jpeg, image/png, image/svg+xml, image/webp" />
						<div id="profile_image_upload" style="display:none">Please wait file uploading..</div>
	
					</div>
				</div>
				<div class="bg-white profile-details">
					<div class="progile-username">{{username}}</div>
					<div class="row">
						<div class="col-12 col-lg-6 col-md-6">
							<div class="txt">Registration date</div>
						</div>
						<div class="col-12 col-lg-6 col-md-6">
							<div class="txt">{{registrationdate}}</div>
						</div>
					</div>
				</div>
			</div>
			{{/userphotos}}
		</div>
	</div>
</div>