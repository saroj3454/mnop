<!-- Course details page -->
{{>local_courses/courseheader}}
{{#institute}}
<section class="my-5 pt-5">
  <div class="container">
    <div class="row">
     <div class="col-md-2">
      {{#picture_url}}
       <div class="user-profile">
         <img src="{{{ picture_url }}}" class="img-fluid">
       </div>
      {{/picture_url}}
     </div>
     <div class="col-md-10">
          <div class="col-md-12">
            <div class="user-info">
              <br>
              {{#Nameofinstitution}}
               <h2>{{{ Nameofinstitution }}}</h2>
              
               <!--<p>Lorem ipsum dolor sit amet, consectetur adipisicing elit </p>-->
              {{/Nameofinstitution}}
             </div>
          </div>
          <div class="container">
                 <div class="row">
                  {{#author_name}}
                   <div class="col-md-4">
                    <div class="user-info">
                       <p>Name of Director:&nbsp; <span>{{{ author_name }}}</span></p>
                    </div>
                  </div>
                  {{/author_name}}
                  {{#contact_number}}
                  <div class="col-md-4">
                    <div class="user-info">
                       <p>Contact Number:&nbsp; <span>{{{ contact_number }}}</span></p>
                    </div>
                  </div>
                  {{/contact_number}}
                  {{#email_id}}
                  <div class="col-md-4">
                    <div class="user-info">
                       <p>Email id:&nbsp; <span>{{{ email_id }}}</span></p>
                    </div>
                  </div>
                  {{/email_id}}
                 </div>
            </div>
            <div class="container">
                 <div class="row">
                 
                   <div class="col-md-4">
                    <div class="user-info">
                       <p>No. of Enrolled Student:&nbsp; <span>{{{ total_student }}}</span></p>
                    </div>
                  </div>
                  <div class="col-md-4">
                    <div class="user-info">
                       <p>No. of  Tutors in The Institution:&nbsp; <span>{{{ total_tutor }}}</span></p>
                    </div>
                  </div>
                  <div class="col-md-4">
                    <div class="user-info">
                       <p>No. of Courses Provided:&nbsp; <span>{{{ total_course }}}</span></p>
                    </div>
                  </div>
                  
                 </div>
            </div>
     </div>
   </div>
 </div>
</section>
<section class="pt-5 pb-5 bg-gray">
  <div class="container">
    <div class="row">
      <div class="col-md-12">
        <div class="tutor-box">
          <div class="heading">
            <h2>About The Institution</h2>
          </div>
        </div>
      </div>
    </div>
      <div class="row">
        <div class="col-md-6">
            {{#disofinstitution}}
              {{{ disofinstitution }}}
            {{/disofinstitution}}
          </div>
        <div class="col-md-6"> 
          {{#imageofinstitution}}
            <img src="{{{ imageofinstitution }}}">
          {{/imageofinstitution}}
        </div>
   </div>
</div>
</section>
<br>
{{/institute}}
