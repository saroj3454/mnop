{{# havetutors}}
<section id="teachers" class="my-5">
  <div class="container">
    <div class="row"> <div class="col-md-12"> <h3 class="text-center text-uppercase">OUR TOP TRENDING TUTORS </h3><br> </div> </div>
    <div class="row owl-carousel carousel-main">
    {{#tutors}}
      <div class="col-md-12 mt-3">
        <div class="teacher-header">
          <img src="{{{profileurl}}}" class="img-fluid">
          <div class="teacher-caption p-2">
          <a href="{{{tutor_url}}}" target="_blank"><h5 class="my-2">{{{firstname}}} {{{lastname}}}</h5></a>
          
        </div>
        </div>
      </div>
    {{/tutors}}
    </div>
  </div>
</section>
{{/havetutors}}

{{#total_course}}
<section id="course" class="my-5">
  <div class="container">
  <div class="row"> <div class="col-md-12"> <h3 class="text-center text-uppercase">OUR TOP TRENDING COURSES </h3><br> </div>
    <div class="row owl-carousel carousel-main">
      {{#noofcourses}}
      <div class="course_section tooltip_hover">
        <a href="{{coursedetails}}">
          {{#courseimage}}<img src="{{courseimage}}" class="" width="250">{{/courseimage}}
        </a>
        <div class="tooltip_content">
          <a href="{{coursedetails}}">
            <span class="vrz_heading">{{fullname}}</span>
          </a>
          <br>
          <div class="best">
            <div class="best_text"> Bestseller</div>
            <span class="vritle">Updated<span class="vritle_xs"> {{update_date}} </span></span>
          </div>
          <div class="vrzite-text"><span> {{catagoryname}} </span></div>
          <div class="vrt_content">{{summary}}</div>
          <div class="course-details">
            <a href="{{enroll}}">
              <button type="button" class=" btn btn-rose black-hover" style="width: 100%;">Add to cart</button>
            </a>
          </div>
        </div>
        <h5 class="h5 text-left my-3 coursename">{{fullname}}</h5>
        <p class="total_enrolled"> <strong> Enrolled Students : </strong> {{enrollStudent}}</p>
        <div class=" right">
          <span>{{course_price}}</span>
          <a href="{{enroll}}"> <button class="btn btn-primary">Enroll Now</button></a>
        </div>
      </div>
      {{/noofcourses}}
    </div>
  </div>
</section>
<script>
